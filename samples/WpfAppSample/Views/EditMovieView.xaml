<UserControl x:Class="WpfAppSample.Views.EditMovieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:minimal="http://schemas.minimalmvvm.com/winfx/xaml/mvvm"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:WpfAppSample.Models"
             xmlns:viewModels="clr-namespace:WpfAppSample.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type viewModels:EditMovieViewModel}, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800" MaxHeight="600" MinHeight="400" MaxWidth="600" MinWidth="600">
    <UserControl.Resources>

        <DataTemplate x:Key="MultiSelectComboBoxDropDownDataTemplate" DataType="{x:Type models:PersonModel}">
            <CheckBox Content="{Binding Name}"/>
        </DataTemplate>

        <DataTemplate x:Key="MultiSelectComboBoxSelectionDataTemplate" DataType="models:PersonModel">
            <TextBlock Text="{Binding Path=(minimal:ComboBoxMultiSelectionBehavior.SelectedItemsAsString), RelativeSource={RelativeSource AncestorType=ComboBox}}" />
        </DataTemplate>

        <ComboBoxItemTemplateSelector x:Key="ComboBoxItemTemplateSelector" 
                                      DropDownDataTemplate="{StaticResource MultiSelectComboBoxDropDownDataTemplate}" 
                                      SelectionDataTemplate="{StaticResource MultiSelectComboBoxSelectionDataTemplate}"/>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Content="Title" />
        <TextBox Grid.Column="1" Grid.Row="0" Margin="5"
                 x:Name="MovieNameTextBox" 
                 Text="{Binding Movie.Name, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap">
            <minimal:Interaction.Behaviors>
                <minimal:FocusBehavior />
            </minimal:Interaction.Behaviors>
        </TextBox>

        <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Content="Release Date" />
        <DatePicker Grid.Column="1" Grid.Row="1" Margin="5"
                    SelectedDate="{Binding Movie.ReleaseDate}" />

        <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Content="Directors" />
        <ComboBox Grid.Column="1" Grid.Row="2" Margin="5"
                  ItemTemplateSelector="{StaticResource ComboBoxItemTemplateSelector}"
                  ItemsSource="{Binding MoviesService.Persons}">
            <minimal:Interaction.Behaviors>
                <minimal:ComboBoxMultiSelectionBehavior SelectedItems="{Binding Movie.Directors}"/>
            </minimal:Interaction.Behaviors>
        </ComboBox>

        <Label Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Content="Writers" />
        <ComboBox Grid.Column="1" Grid.Row="3" Margin="5"
                  ItemTemplateSelector="{StaticResource ComboBoxItemTemplateSelector}"
                  ItemsSource="{Binding MoviesService.Persons}">
            <minimal:Interaction.Behaviors>
                <minimal:ComboBoxMultiSelectionBehavior SelectedItems="{Binding Movie.Writers}"/>
            </minimal:Interaction.Behaviors>
        </ComboBox>

        <Label Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Content="Description" />
        <TextBox Grid.Column="1" Grid.Row="4" Margin="5" TextWrapping="Wrap" 
                 Text="{Binding Movie.Description}"/>

        <Label Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" Content="Storyline" />
        <TextBox Grid.Column="1" Grid.Row="5" Margin="5" TextWrapping="Wrap" 
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Text="{Binding Movie.Storyline}"/>

    </Grid>
</UserControl>
